# Production Environment Configuration
NODE_ENV=production

# Database Configuration (Neon - Recommended)
DATABASE_URL=postgresql://username:password@host:5432/database

# Alternative: Vercel Postgres
# POSTGRES_URL=postgresql://username:password@host:5432/database
# POSTGRES_PRISMA_URL=postgresql://username:password@host:5432/database?pgbouncer=true&connect_timeout=15
# POSTGRES_URL_NON_POOLING=postgresql://username:password@host:5432/database

# Alternative: Railway
# DATABASE_URL=postgresql://username:password@host:5432/database

# Redis Configuration (Upstash Redis)
REDIS_URL=redis://username:password@host:port
KV_REST_API_URL=https://your-redis-instance.upstash.io
KV_REST_API_TOKEN=your-redis-token

# Groq API Configuration
GROQ_API_KEY=your_production_groq_api_key
GROQ_MODEL=llama3-8b-8192

# Application Configuration
PORT=3000
JWT_SECRET=your_production_jwt_secret_here
ENCRYPTION_KEY=your_32_character_production_encryption_key

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/tmp/uploads
TEMP_DIR=/tmp/temp

# Security Configuration
CORS_ORIGIN=https://your-domain.vercel.app
SESSION_SECRET=your_production_session_secret

# Data Retention Configuration
DATA_TTL_HOURS=24
CLEANUP_INTERVAL_MINUTES=60